<resources>

  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="colorPrimary">@color/primary_500</item>
    <item name="colorPrimaryDark">@color/primary_700</item>
    <item name="colorAccent">@color/primary_500</item>

    <item name="android:statusBarColor">@color/status_bar</item>
    <item name="android:windowLightStatusBar">true</item>

    <item name="android:fontFamily">@font/rubik</item>

    <item name="android:textViewStyle">@style/Text</item>
    <item name="materialButtonStyle">@style/MaterialButton</item>
    <item name="imageButtonStyle">@style/ImageButton</item>
    <item name="materialCardViewStyle">@style/StyledCardView</item>
  </style>

  <style name="StyledCardView" parent="Widget.MaterialComponents.CardView">
    <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    <item name="cardElevation">@dimen/card_elevation</item>
    <item name="cardBackgroundColor">@color/card_background_light</item>
    <item name="rippleColor">@color/ripple_color</item>
  </style>

  <!-- Buttons -->

  <style name="MaterialButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
    <item name="android:letterSpacing">0</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:fontFamily">@font/rubik_bold</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/material_button_text</item>

    <item name="backgroundTint">@color/material_button_background</item>
    <item name="cornerRadius">10dp</item>

    <item name="android:insetLeft">0dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetRight">0dp</item>
    <item name="android:insetBottom">0dp</item>
  </style>

  <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:letterSpacing">0</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:fontFamily">@font/rubik_bold</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/material_button_outlined</item>

    <item name="strokeWidth">2dp</item>
    <item name="strokeColor">@color/material_button_outlined</item>

    <item name="cornerRadius">10dp</item>

    <item name="android:insetLeft">0dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetRight">0dp</item>
    <item name="android:insetBottom">0dp</item>
  </style>

  <style name="OutlinedButton.White">
    <item name="android:textColor">@color/white</item>
    <item name="strokeColor">@color/white</item>
  </style>

  <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="textAppearanceButton">@style/Text.Headline.Medium</item>
    <item name="android:textColor">@color/text_button</item>
  </style>

  <style name="TextButton.White">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="ProfileMenuButton" parent="TextButton">
    <item name="android:paddingStart">@dimen/profile_side_padding</item>
    <item name="android:paddingEnd">@dimen/profile_side_padding</item>

    <item name="android:layout_height">@dimen/profile_button_height</item>
    <item name="android:gravity">start|center_vertical</item>

    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
  </style>

  <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
    <item name="android:background">?selectableItemBackgroundBorderless</item>
  </style>

  <!-- Widgets -->
  <style name="CircleIndicator">
    <item name="ci_margin">4dp</item>
    <item name="ci_width">6dp</item>
    <item name="ci_height">6dp</item>
    <item name="ci_animator">@animator/circle_indicator_scale_in</item>
    <item name="ci_drawable">@drawable/ic_indicator_round_selected</item>
    <item name="ci_drawable_unselected">@drawable/ic_indicator_round_unselected</item>
  </style>

  <style name="AuthCodeConfirmation" parent="Text.Title1.Medium" />

  <style name="AuthCodeConfirmation.EditText">
    <item name="android:letterSpacing">@dimen/auth_confirmation_code_letter_spacing</item>
  </style>

  <style name="AuthTextInputEditTextOverlay">
    <item name="editTextStyle">@style/AuthTextInputEditText</item>
  </style>

  <style name="AuthTextInputEditText" parent="Base.Widget.MaterialComponents.TextInputEditText">
    <item name="android:paddingStart">0dp</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingEnd">0dp</item>
    <item name="android:paddingBottom">0dp</item>
  </style>

  <style name="Divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/divider_height</item>
    <item name="android:background">@color/gray_50</item>
  </style>

  <style name="ReceiptDateText" />

  <style name="ReceiptDateText.Big" parent="Text.Body" />

  <style name="ReceiptDateText.Small" parent="Text.Caption" />

  <style name="LabelView" parent="Text.Caption.Bold">
    <item name="android:textColor">@color/label_text</item>
    <item name="android:drawablePadding">4dp</item>
  </style>

</resources>
