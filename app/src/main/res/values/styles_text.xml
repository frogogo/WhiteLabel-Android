<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Text">
    <item name="android:includeFontPadding">false</item>
  </style>

  <!-- Title Large -->
  <style name="Text.TitleLarge">
    <item name="android:textSize">@dimen/text_title_large_size</item>
    <item name="android:lineSpacingExtra">@dimen/text_title_large_spacing_extra</item>
  </style>

  <style name="Text.TitleLarge.Medium">
    <item name="android:fontFamily">@font/rubik_medium</item>
  </style>

  <!-- Title1 -->
  <style name="Text.Title1">
    <item name="android:textSize">@dimen/text_title_1_size</item>
    <item name="android:lineSpacingExtra">@dimen/text_title_1_spacing_extra</item>

    <item name="autoSizeTextType">uniform</item>
    <item name="autoSizeMinTextSize">@dimen/text_title_1_size_min</item>
  </style>

  <style name="Text.Title1.Medium">
    <item name="android:fontFamily">@font/rubik_medium</item>
  </style>

  <!-- Title2 -->
  <style name="Text.Title2">
    <item name="android:textSize">@dimen/text_title_2_size</item>
    <item name="android:lineSpacingExtra">@dimen/text_title_2_spacing_extra</item>
  </style>

  <style name="Text.Title2.Medium">
    <item name="android:fontFamily">@font/rubik_medium</item>
  </style>

  <!-- Headline -->
  <style name="Text.Headline">
    <item name="android:textSize">@dimen/text_headline_size</item>
    <item name="android:lineSpacingExtra">@dimen/text_headline_spacing_extra</item>
  </style>

  <style name="Text.Headline.Medium">
    <item name="android:fontFamily">@font/rubik_medium</item>
  </style>

  <style name="Text.Headline.Bold">
    <item name="android:fontFamily">@font/rubik_bold</item>
  </style>

  <!-- Body -->
  <style name="Text.Body">
    <item name="android:textSize">@dimen/text_body_size</item>
    <item name="android:lineSpacingExtra">@dimen/text_body_spacing_extra</item>
  </style>

  <style name="Text.Body.Medium">
    <item name="android:fontFamily">@font/rubik_medium</item>
  </style>

  <!-- Subhead -->
  <style name="Text.Subhead">
    <item name="android:textSize">@dimen/text_subhead_size</item>
    <item name="android:lineSpacingExtra">@dimen/text_subhead_spacing_extra</item>
  </style>

  <style name="Text.Subhead.Medium">
    <item name="android:fontFamily">@font/rubik_medium</item>
  </style>

  <style name="Text.Subhead.Bold">
    <item name="android:fontFamily">@font/rubik_bold</item>
  </style>

  <!-- Caption -->
  <style name="Text.Caption">
    <item name="android:textSize">@dimen/text_caption_size</item>
    <item name="android:lineSpacingExtra">@dimen/text_caption_spacing_extra</item>
  </style>

  <style name="Text.Caption.Medium">
    <item name="android:fontFamily">@font/rubik_medium</item>
  </style>

  <style name="Text.Caption.Bold">
    <item name="android:fontFamily">@font/rubik_bold</item>
  </style>

  <!-- UseCased Styles -->
  <style name="Text.Error" parent="Text.Body">
    <item name="android:textColor">@color/text_error</item>
    <item name="android:lineSpacingExtra">0sp</item>
  </style>

</resources>
