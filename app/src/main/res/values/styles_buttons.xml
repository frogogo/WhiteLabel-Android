<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="MaterialButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
    <item name="android:letterSpacing">0</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:fontFamily">@font/rubik_bold</item>
    <item name="android:textSize">@dimen/button_text_size</item>
    <item name="android:textColor">@color/material_button_text</item>
    <item name="rippleColor">@color/ripple</item>

    <item name="backgroundTint">@color/material_button_background</item>
    <item name="cornerRadius">10dp</item>

    <item name="android:insetLeft">0dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetRight">0dp</item>
    <item name="android:insetBottom">0dp</item>
  </style>

  <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:letterSpacing">0</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:fontFamily">@font/rubik_bold</item>
    <item name="android:textSize">@dimen/button_text_size</item>
    <item name="android:textColor">@color/material_button_outlined</item>

    <item name="strokeWidth">2dp</item>
    <item name="strokeColor">@color/material_button_outlined</item>
    <item name="rippleColor">@color/ripple</item>

    <item name="cornerRadius">10dp</item>

    <item name="android:insetLeft">0dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetRight">0dp</item>
    <item name="android:insetBottom">0dp</item>
  </style>

  <style name="OutlinedButton.White">
    <item name="android:textColor">@color/white</item>
    <item name="strokeColor">@color/white</item>
    <item name="rippleColor">@color/ripple_gray</item>
  </style>

  <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="textAppearanceButton">@style/Text.Headline.Medium</item>
    <item name="android:textColor">@color/text_button</item>
    <item name="rippleColor">@color/ripple</item>
  </style>

  <style name="TextButton.White">
    <item name="android:textColor">@color/white</item>
    <item name="rippleColor">@color/ripple_gray</item>
  </style>

  <style name="ProfileMenuButton" parent="TextButton">
    <item name="android:paddingStart">@dimen/profile_side_padding</item>
    <item name="android:paddingEnd">@dimen/profile_side_padding</item>

    <item name="android:layout_height">@dimen/profile_button_height</item>
    <item name="android:gravity">start|center_vertical</item>

    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
  </style>

  <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
    <item name="android:background">?selectableItemBackgroundBorderless</item>
  </style>

  <style name="IconButton" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:minWidth">0dp</item>
    <item name="android:insetLeft">0dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetRight">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="iconGravity">textStart</item>
    <item name="iconPadding">0dp</item>
    <item name="iconTint">@color/black</item>
    <item name="cornerRadius">100dp</item>
  </style>

  <style name="IconButton.Backgrounded">
    <item name="android:elevation">6dp</item>
    <item name="backgroundTint">@color/white</item>
  </style>

  <style name="HomeScanButton" parent="MaterialButton">
    <item name="backgroundTint">@color/home_scan_button_background</item>
    <item name="android:fontFamily">@font/rubik_medium</item>
    <item name="android:textColor">@color/white</item>
    <item name="iconTint">@color/white</item>
  </style>

</resources>
