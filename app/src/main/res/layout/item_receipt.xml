<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_4">

    <!-- Receipt Values -->
    <TextView
      android:id="@+id/textViewReceiptId"
      style="@style/Text.Headline.Medium"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/spacing_4"
      android:textColor="@color/receipt_item_text"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@id/textViewReceiptValue"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="№ 3493439" />

    <TextView
      android:id="@+id/textViewReceiptValue"
      style="@style/Text.Headline.Bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/receipt_item_text"
      app:layout_constrainedWidth="true"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintWidth_min="wrap"
      tools:text="5 403 ₽" />

    <TextView
      android:id="@+id/textViewDate"
      style="@style/Text.Subhead"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="@dimen/spacing_4"
      android:textColor="@color/receipt_item_text"
      app:layout_constrainedWidth="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@id/viewLabel"
      app:layout_constraintTop_toBottomOf="@id/textViewReceiptId"
      tools:text="23.05.2020 - 13:20" />

    <ru.poprobuy.poprobuy.view.LabelView
      android:id="@+id/viewLabel"
      style="@style/LabelView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawablePadding="4dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/textViewReceiptValue"
      app:layout_constraintVertical_bias="1"
      tools:drawableStart="@drawable/ic_accept"
      tools:text="@string/receipt_item_status_accepted" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
