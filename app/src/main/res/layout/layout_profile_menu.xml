<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <com.google.android.material.button.MaterialButton
    android:id="@+id/buttonReceipts"
    style="@style/ProfileMenuButton"
    android:layout_width="0dp"
    android:layout_height="@dimen/profile_button_height"
    android:text="@string/profile_button_receipts"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <View
    android:id="@+id/divider1"
    style="@style/Divider"
    android:layout_width="0dp"
    android:layout_marginStart="@dimen/profile_side_padding"
    android:layout_marginEnd="@dimen/profile_side_padding"
    android:visibility="gone"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/buttonReceipts" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/buttonGoods"
    style="@style/ProfileMenuButton"
    android:layout_width="0dp"
    android:layout_height="@dimen/profile_button_height"
    android:text="@string/profile_button_goods"
    android:visibility="gone"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/divider1" />

</androidx.constraintlayout.widget.ConstraintLayout>
