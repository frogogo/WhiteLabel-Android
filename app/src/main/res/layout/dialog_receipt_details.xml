<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="@dimen/spacing_8">

  <include
    android:id="@+id/layoutHeader"
    layout="@layout/view_receipt_header"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:src="@drawable/ic_handlebar"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <!-- Footer -->
  <include
    android:id="@+id/layoutFooterAccepted"
    layout="@layout/view_receipt_footer_accepted"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_3"
    android:visibility="gone"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/layoutHeader"
    tools:visibility="visible" />

  <include
    android:id="@+id/layoutFooterCheck"
    layout="@layout/view_receipt_footer_check"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_3"
    android:visibility="gone"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/layoutHeader" />

  <include
    android:id="@+id/layoutFooterCompleted"
    layout="@layout/view_receipt_footer_completed"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_3"
    android:visibility="gone"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/layoutHeader" />

  <androidx.constraintlayout.widget.Barrier
    android:id="@+id/barrierFooter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:barrierDirection="bottom"
    app:constraint_referenced_ids="layoutFooterAccepted,layoutFooterCheck,layoutFooterCompleted" />

  <include
    android:id="@+id/layoutControlsGoods"
    layout="@layout/view_receipt_controls_goods"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_4"
    android:layout_marginTop="@dimen/spacing_6"
    android:layout_marginEnd="@dimen/spacing_4"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/barrierFooter"
    tools:visibility="visible" />

  <include
    android:id="@+id/layoutControlsScan"
    layout="@layout/view_receipt_controls_scan"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_4"
    android:layout_marginTop="@dimen/spacing_6"
    android:layout_marginEnd="@dimen/spacing_4"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/barrierFooter" />

</androidx.constraintlayout.widget.ConstraintLayout>
