<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clipToPadding="false">

  <ru.poprobuy.poprobuy.view.ReceiptView
    android:id="@+id/viewReceipt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toTopOf="@id/layoutFooter"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.4"
    app:layout_constraintWidth_max="296dp"
    app:layout_constraintWidth_percent="0.82" />

  <FrameLayout
    android:id="@+id/layoutFooter"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_6"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="@id/viewReceipt"
    app:layout_constraintRight_toRightOf="@id/viewReceipt">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/layout_accept"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      tools:visibility="visible">

      <TextView
        android:id="@+id/textViewTitle"
        style="@style/Text.Subhead.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/home_accepted_title"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonEnterMachine"
        style="@style/OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_6"
        android:layout_marginEnd="@dimen/spacing_1"
        android:text="@string/home_accepted_button_enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonScanMachine"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

      <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonScanMachine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_1"
        android:layout_marginTop="@dimen/spacing_6"
        android:text="@string/home_accepted_button_scan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonEnterMachine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
      android:id="@+id/buttonScanReceipt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/home_rejected_button_scan"
      android:visibility="gone"
      app:icon="@drawable/ic_scan_qr"
      app:iconGravity="textEnd" />

  </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
