<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clipToPadding="false">

  <ru.poprobuy.poprobuy.view.ReceiptView
    android:id="@+id/view_receipt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toTopOf="@id/layout_footer"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.4"
    app:layout_constraintWidth_max="296dp"
    app:layout_constraintWidth_percent="0.82" />

  <FrameLayout
    android:id="@+id/layout_footer"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_6"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="@id/view_receipt"
    app:layout_constraintRight_toRightOf="@id/view_receipt">

    <include
      android:id="@+id/layout_controls_goods"
      layout="@layout/view_receipt_controls_goods"
      android:visibility="gone"
      tools:visibility="visible" />

    <include
      android:id="@+id/layout_controls_scan"
      layout="@layout/view_receipt_controls_scan"
      android:visibility="gone" />

  </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
